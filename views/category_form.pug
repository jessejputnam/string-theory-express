extends layout 

block content 
  div.form-wrapper
    h1 #{title} 

    form(method='POST' action='')
      div.form-group
        label(for='name') Category: 
        input#name.form-control(type='text' placeholder='Cello, banjo, etc' name='name' value=(undefined===category ? "" : category.name))
        label(for='imgUrl') Image URL:
        input#imgUrl.form-control(type='text', placeholder='www.image.com/image.png' name='imgUrl' value=(undefined===category ? "" : category.imgUrl))
      button.btn.btn-secondary(type='submit') Submit

    if errors 
      ul 
        for error in errors 
          li!= error.msg