extends layout 

block content 
  div.delete-wrapper 
    h1 #{title}: #{category.name} 

    if category_instruments.length || category_accessories.length 

      p #[strong Delete the following items before attempting to delete category] 
        
        div(style='margin-left:20px;margin-top:20px')

          h4 Instruments 
          
          dl 
          each instrument in category_instruments 
            dt  
              a(href=instrument.url) !{instrument.name}
            dd #{instrument.company} 
        
          h4 Accessories 
          
          dl 
          each accessory in category_accessories 
            dt 
              a(href=accessory.url) !{accessory.name}
            dd #{accessory.company}

    else 
      p Do you really want to delete this Category?

      form(method='POST' action='')
        div.form-group 
          input#categoryid.form-control(type='hidden' name='categoryid' required='true' value=category._id)
        
        button.btn.btn-secondary(type='submit') Delete